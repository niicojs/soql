{
  "name": "@niicojs/soql",
  "version": "0.2.0",
  "description": "Safe SOQL template literal tag for Salesforce - prevents SOQL injection with automatic escaping",
  "keywords": [
    "apex",
    "escape",
    "force.com",
    "injection",
    "query-builder",
    "salesforce",
    "security",
    "soql",
    "sql",
    "template-literal"
  ],
  "homepage": "https://github.com/niicojs/soql#readme",
  "bugs": {
    "url": "https://github.com/niicojs/soql/issues"
  },
  "license": "MIT",
  "author": "niico",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/niicojs/soql.git"
  },
  "files": [
    "dist",
    "src"
  ],
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "dev": "tsdx dev",
    "build": "tsdx build",
    "test": "tsdx test",
    "test:watch": "tsdx test --watch",
    "lint": "tsdx lint",
    "format": "tsdx format",
    "format:check": "tsdx format --check",
    "typecheck": "tsdx typecheck",
    "prepublishOnly": "bun run build"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "bunchee": "^6.9.3",
    "tsdx": "latest",
    "typescript": "^5.7.2",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=20"
  }
}
